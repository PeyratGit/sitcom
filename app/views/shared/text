<% if Feedback.where(user_id: current_user, comment: nil) == nil %>
  <div class="js-interact btn-interaction">
    <%= link_to tv_show_feedbacks_path(feedback: {status: "Like"}, tv_show_id: @tv_show.id), remote: true, method: :post do %>
        <i class="fa fa-thumbs-up" id="thumb-up"></i>
    <% end %>
  </div>
  <div class="js-interact btn-interaction">
    <%= link_to tv_show_feedbacks_path(feedback: {status: "Dislike"}, tv_show_id: @tv_show.id), remote: true, method: :post do %>
      <i class="fa fa-thumbs-down" id="thumb-down"></i>
    <% end %>
  </div>
  <div class="js-interact btn-interaction-superlike">
    <%= link_to tv_show_feedbacks_path(feedback: {status: "Superlike"}, tv_show_id: @tv_show.id), remote: true, method: :post do %>
      <i class="fa fa-heart" id="heart-like"></i>
    <% end %>
  </div>
<% else %>
  <% status = Feedback.where(user_id: current_user, comment: nil).last[:status] %>
  <% if status == "Like" %>
    <div class="js-interact btn-interaction .active">
      <%= link_to tv_show_feedbacks_path(feedback: {status: "Like"}, tv_show_id: @tv_show.id), remote: true, method: :patch do %>
          <i class="fa fa-thumbs-up" id="thumb-up"></i>
      <% end %>
    </div>
    <div class="js-interact btn-interaction">
      <%= link_to tv_show_feedbacks_path(feedback: {status: "Dislike"}, tv_show_id: @tv_show.id), remote: true, method: :patch do %>
        <i class="fa fa-thumbs-down" id="thumb-down"></i>
      <% end %>
    </div>
    <div class="js-interact btn-interaction-superlike">
      <%= link_to tv_show_feedbacks_path(feedback: {status: "Superlike"}, tv_show_id: @tv_show.id), remote: true, method: :patch do %>
        <i class="fa fa-heart" id="heart-like"></i>
      <% end %>
    </div>
  <% elsif status == "Dislike" %>
    <div class="js-interact btn-interaction">
      <%= link_to tv_show_feedbacks_path(feedback: {status: "Like"}, tv_show_id: @tv_show.id), remote: true, method: :patch do %>
          <i class="fa fa-thumbs-up" id="thumb-up"></i>
      <% end %>
    </div>
    <div class="js-interact btn-interaction .active">
      <%= link_to tv_show_feedbacks_path(feedback: {status: "Dislike"}, tv_show_id: @tv_show.id), remote: true, method: :patch do %>
        <i class="fa fa-thumbs-down" id="thumb-down"></i>
      <% end %>
    </div>
    <div class="js-interact btn-interaction-superlike">
      <%= link_to tv_show_feedbacks_path(feedback: {status: "Superlike"}, tv_show_id: @tv_show.id), remote: true, method: :patch do %>
        <i class="fa fa-heart" id="heart-like"></i>
      <% end %>
   </div>
  <% else %>
    <div class="js-interact btn-interaction">
      <%= link_to tv_show_feedbacks_path(feedback: {status: "Like"}, tv_show_id: @tv_show.id), remote: true, method: :patch do %>
          <i class="fa fa-thumbs-up" id="thumb-up"></i>
      <% end %>
    </div>
    <div class="js-interact btn-interaction">
      <%= link_to tv_show_feedbacks_path(feedback: {status: "Dislike"}, tv_show_id: @tv_show.id), remote: true, method: :post do %>
        <i class="fa fa-thumbs-down" id="thumb-down"></i>
      <% end %>
    </div>
    <div class="js-interact btn-interaction-superlike .active">
      <%= link_to tv_show_feedbacks_path(feedback: {status: "Superlike"}, tv_show_id: @tv_show.id), remote: true, method: :post do %>
        <i class="fa fa-heart" id="heart-like"></i>
      <% end %>
    </div>
