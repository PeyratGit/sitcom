<% if Feedback.where(user_id: current_user, comment: nil) == nil %>
  <%= link_to tv_show_feedbacks_path(feedback: {status: "Like"}, tv_show_id: @tv_show.id), class:"btn-interaction js-interact", remote: true, method: :post do %>
    <i class="fa fa-thumbs-up" id="thumb-up"></i>
  <% end %>
  <%= link_to tv_show_feedbacks_path(feedback: {status: "Dislike"}, tv_show_id: @tv_show.id), class:"btn-interaction js-interact", remote: true, method: :post do %>
    <i class="fa fa-thumbs-down" id="thumb-down"></i>
  <% end %>
  <%= link_to tv_show_feedbacks_path(feedback: {status: "Superlike"}, tv_show_id: @tv_show.id), class:"btn-interaction-superlike js-interact", remote: true, method: :post do %>
    <i class="fa fa-heart" id="heart-like"></i>
  <% end %>
<% else %>
  <% status = Feedback.where(user_id: current_user, comment: nil).last[:status] %>
  <% if status == "Like" %>
    <%= link_to tv_show_feedbacks_path(feedback: {status: "Like"}, tv_show_id: @tv_show.id), class:"btn-interaction js-interact js-interact", style:"background: #fff; box-shadow: 0px 2px 10px 5px #1ABC9C;", remote: true, method: :post do %>
      <i class="fa fa-thumbs-up" id="thumb-up" style="color: #32E0C4"></i>
    <% end %>
    <%= link_to tv_show_feedbacks_path(feedback: {status: "Dislike"}, tv_show_id: @tv_show.id), class:"btn-interaction js-interact", remote: true, method: :post do %>
      <i class="fa fa-thumbs-down" id="thumb-down"></i>
    <% end %>
    <%= link_to tv_show_feedbacks_path(feedback: {status: "Superlike"}, tv_show_id: @tv_show.id), class:"btn-interaction-superlike js-interact", remote: true, method: :post do %>
      <i class="fa fa-heart" id="heart-like"></i>
    <% end %>
  <% elsif status == "Dislike" %>
    <%= link_to tv_show_feedbacks_path(feedback: {status: "Like"}, tv_show_id: @tv_show.id), class:"btn-interaction js-interact", remote: true, method: :post do %>
      <i class="fa fa-thumbs-up" id="thumb-up"></i>
    <% end %>
    <%= link_to tv_show_feedbacks_path(feedback: {status: "Dislike"}, tv_show_id: @tv_show.id), class:"btn-interaction js-interact", style:"background: #fff; box-shadow: 0px 2px 10px 5px #1ABC9C;", remote: true, method: :post do %>
      <i class="fa fa-thumbs-down" id="thumb-down" style="color:red;"></i>
    <% end %>
    <%= link_to tv_show_feedbacks_path(feedback: {status: "Superlike"}, tv_show_id: @tv_show.id), class:"btn-interaction-superlike js-interact", remote: true, method: :post do %>
      <i class="fa fa-heart" id="heart-like"></i>
    <% end %>
  <% else %>
    <%= link_to tv_show_feedbacks_path(feedback: {status: "Like"}, tv_show_id: @tv_show.id), class:"btn-interaction js-interact", remote: true, method: :post do %>
      <i class="fa fa-thumbs-up" id="thumb-up"></i>
    <% end %>
    <%= link_to tv_show_feedbacks_path(feedback: {status: "Dislike"}, tv_show_id: @tv_show.id), class:"btn-interaction js-interact", remote: true, method: :post do %>
      <i class="fa fa-thumbs-down" id="thumb-down"></i>
    <% end %>
    <%= link_to tv_show_feedbacks_path(feedback: {status: "Superlike"}, tv_show_id: @tv_show.id), class:"btn-interaction-superlike js-interact", style:"background: #fff; box-shadow: 0px 2px 10px 5px #1ABC9C;", remote: true, method: :post do %>
      <i class="fa fa-heart" id="heart-like" style="color:#ff053f;"></i>
    <% end %>
  <% end %>
<% end %>

# Mahdi :
<div class="js-interact btn-interaction">
  <%= link_to tv_show_feedbacks_path(feedback: {status: "Like"}, tv_show_id: @tv_show.id), remote: true, method: :post do %>
      <i class="fa fa-thumbs-up" id="thumb-up" style="color: #32E0C4"></i>
    <% end %>
</div>
<div class="js-interact btn-interaction" data-id=<%= @tv_show.id %> >
  <i class="fa fa-thumbs-down" id="thumb-down"></i>
</div>
<div class="js-interact btn-interaction-superlike">
  <i class="fa fa-heart" id="heart-like"></i>
</div>
